@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-height:30em">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="max-height:30em">
            <div class="item active">
                <img src="~/Images/pokoj.jpg" alt="pokoj" class="center-block" style="max-height:30em">
                <div class="carousel-caption top">
                    <h3>Witamy</h3>
                    <p>Zarezerwuj pokój już teraz</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/rest.jpg" class="center-block" alt="rest" style="max-height:30em">
                <div class="carousel-caption">
                    <h3>Tutejsze specjały</h3>
                    <p>Zapraszamy do naszej restauracji.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/aqua.jpg" class="center-block" alt="aqua" style="max-height:30em">
                <div class="carousel-caption">
                    <h3>Aquapark dla gości</h3>
                    <p>Czynny w godzinach 10-16.</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

